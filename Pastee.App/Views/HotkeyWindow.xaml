<Window x:Class="Pastee.App.Views.HotkeyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hotkey Settings" 
        Height="360" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        Topmost="True">
    
    <Window.Resources>
        <Style x:Key="PresetButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="0,0,10,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="6"/>
                </Style>
            </Style.Resources>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource SurfaceHoverBrush}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                </Trigger>
                <Trigger Property="Tag" Value="Selected">
                    <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                    <Setter Property="Foreground" Value="{StaticResource BackgroundBrush}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource BackgroundBrush}" CornerRadius="12" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.4" Color="Black"/>
        </Border.Effect>
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Text="Global Hotkey Settings" FontSize="24" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,10"/>
            <TextBlock Grid.Row="1" Text="Select a hotkey to show/hide Pastee window:" Foreground="{StaticResource TextSecondaryBrush}" FontSize="13" Margin="0,0,0,20"/>

            <!-- Hotkey Options -->
            <StackPanel Grid.Row="2">
                <WrapPanel x:Name="HotkeyOptions">
                    <Button x:Name="BtnWinV" Content="Win + V" Style="{StaticResource PresetButtonStyle}" Click="Preset_Click"/>
                    <Button x:Name="BtnCtrlShiftV" Content="Ctrl + Shift + V" Style="{StaticResource PresetButtonStyle}" Click="Preset_Click"/>
                    <Button x:Name="BtnCtrlShiftC" Content="Ctrl + Shift + C" Style="{StaticResource PresetButtonStyle}" Click="Preset_Click"/>
                    <Button x:Name="BtnCtrlAltV" Content="Ctrl + Alt + V" Style="{StaticResource PresetButtonStyle}" Click="Preset_Click"/>
                    <Button x:Name="BtnCtrlAltC" Content="Ctrl + Alt + C" Style="{StaticResource PresetButtonStyle}" Click="Preset_Click"/>
                </WrapPanel>
                
                <!-- Custom Hotkey Recording -->
                <StackPanel Margin="0,15,0,0">
                    <TextBlock Text="Or record a custom hotkey:" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,0,0,8"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Border x:Name="RecordingBorder" Background="{StaticResource SurfaceBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="6" Padding="12,8">
                            <TextBlock x:Name="RecordedHotkeyText" Text="Click 'Record' and press keys..." Foreground="{StaticResource TextSecondaryBrush}" FontSize="14" VerticalAlignment="Center"/>
                        </Border>
                        <Button x:Name="RecordButton" Grid.Column="1" Content="ðŸŽ¤ Record" Margin="10,0,0,0" Padding="12,8" Click="OnRecordClick">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource PresetButtonStyle}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=RecordButton, Path=Tag}" Value="Recording">
                                            <Setter Property="Background" Value="#E74C3C"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="Content" Value="â¹ Stop"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </StackPanel>
            </StackPanel>

            <!-- Actions -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel" Click="OnCancel" Style="{StaticResource LinkButtonStyle}" Margin="0,0,20,0"/>
                <Button Content="Save" Click="OnSave" Style="{StaticResource PrimaryButtonStyle}" MinWidth="100"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
