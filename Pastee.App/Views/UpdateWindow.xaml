<Window x:Class="Pastee.App.Views.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Available" 
        Height="400" Width="450"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Topmost="True">

    <Border Background="{StaticResource BackgroundBrush}" CornerRadius="12" Margin="10" 
            BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" Color="#000" Opacity="0.4" ShadowDepth="0"/>
        </Border.Effect>
        
        <Grid>
            <!-- Close Button (only for non-mandatory updates) -->
            <Button x:Name="CloseButton"
                    HorizontalAlignment="Right" VerticalAlignment="Top" 
                    Margin="0,15,15,0"
                    Style="{StaticResource IconButtonStyle}"
                    Content="âœ•" 
                    FontSize="16"
                    Width="30" Height="30"
                    Click="OnClose"
                    Cursor="Hand"/>

            <StackPanel Margin="30,40,30,30">
                <!-- Icon -->
                <TextBlock Text="ðŸš€" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                
                <!-- Title -->
                <TextBlock Text="New Version Available!" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource TextPrimaryBrush}" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,8"/>

                <!-- Version Info -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,16">
                    <TextBlock Text="Current: " Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock x:Name="CurrentVersionText" Text="1.0.0" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock Text="  â†’  " Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock Text="Latest: " Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock x:Name="LatestVersionText" Text="1.0.1" Foreground="{StaticResource AccentBrush}" FontWeight="SemiBold"/>
                </StackPanel>

                <!-- Mandatory Update Warning -->
                <Border x:Name="MandatoryWarning" 
                        Background="#1AF38BA8" 
                        BorderBrush="{StaticResource DeleteBrush}" 
                        BorderThickness="1" 
                        CornerRadius="6" 
                        Padding="12" 
                        Margin="0,0,0,16"
                        Visibility="Collapsed">
                    <TextBlock Text="âš  This is a mandatory update. You must update to continue using the app." 
                               Foreground="{StaticResource DeleteBrush}" 
                               TextWrapping="Wrap" 
                               TextAlignment="Center"/>
                </Border>

                <!-- Release Notes -->
                <Border x:Name="ReleaseNotesContainer" 
                        Background="{StaticResource SurfaceBrush}" 
                        CornerRadius="6" 
                        Padding="12" 
                        Margin="0,0,0,20"
                        MaxHeight="100"
                        Visibility="Collapsed">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <TextBlock x:Name="ReleaseNotesText" 
                                   Foreground="{StaticResource TextSecondaryBrush}" 
                                   TextWrapping="Wrap"
                                   FontSize="13"/>
                    </ScrollViewer>
                </Border>

                <!-- Download Progress -->
                <StackPanel x:Name="DownloadProgressPanel" Visibility="Collapsed" Margin="0,0,0,20">
                    <TextBlock x:Name="DownloadStatusText" 
                               Text="Downloading..." 
                               Foreground="{StaticResource TextSecondaryBrush}" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"/>
                    <ProgressBar x:Name="DownloadProgress" 
                                 Height="8" 
                                 Minimum="0" 
                                 Maximum="100" 
                                 Value="0"
                                 Background="{StaticResource SurfaceBrush}"
                                 Foreground="{StaticResource AccentBrush}">
                        <ProgressBar.Style>
                            <Style TargetType="ProgressBar">
                                <Style.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="4"/>
                                    </Style>
                                </Style.Resources>
                            </Style>
                        </ProgressBar.Style>
                    </ProgressBar>
                    <TextBlock x:Name="DownloadPercentText" 
                               Text="0%" 
                               Foreground="{StaticResource TextSecondaryBrush}" 
                               HorizontalAlignment="Center"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Error Message -->
                <Border x:Name="ErrorContainer" 
                        Background="#1AFF5252" 
                        BorderBrush="{StaticResource DeleteBrush}" 
                        BorderThickness="1" 
                        CornerRadius="6" 
                        Padding="12" 
                        Margin="0,0,0,16"
                        Visibility="Collapsed">
                    <TextBlock x:Name="ErrorText" 
                               Foreground="{StaticResource DeleteBrush}" 
                               TextWrapping="Wrap" 
                               TextAlignment="Center"/>
                </Border>

                <!-- Buttons -->
                <StackPanel x:Name="ButtonPanel" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="UpdateButton"
                            Content="Update Now" 
                            Style="{StaticResource PrimaryButtonStyle}" 
                            Padding="24,12"
                            Margin="0,0,12,0"
                            Click="OnUpdateClick"/>
                    <Button x:Name="LaterButton"
                            Content="Later" 
                            Padding="24,12"
                            Click="OnLaterClick">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="6" 
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource SurfaceHoverBrush}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>


