<Window x:Class="Pastee.App.Views.EditTextWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input"
        SizeToContent="Height"
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        Topmost="True">
    
    <Border Background="{StaticResource BackgroundBrush}" CornerRadius="12" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.4" Color="Black"/>
        </Border.Effect>
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="LabelText" 
                       Text="Content:"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       FontWeight="SemiBold"
                       FontSize="14"
                       Margin="0,0,0,10"/>

            <TextBox x:Name="TextInputBox"
                     Grid.Row="1"
                     Padding="10,8"
                     BorderBrush="{StaticResource BorderBrush}"
                     BorderThickness="1"
                     Background="{StaticResource SurfaceBrush}"
                     Foreground="{StaticResource TextPrimaryBrush}"
                     CaretBrush="{StaticResource AccentBrush}"
                     FontSize="14"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     MinHeight="35"/>

            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,20,0,0">
                <Button Content="Cancel"
                        Style="{StaticResource LinkButtonStyle}"
                        Margin="0,0,15,0"
                        Click="OnCancel"/>
                <Button Content="Save"
                        Style="{StaticResource PrimaryButtonStyle}"
                        MinWidth="80"
                        Click="OnSave"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
