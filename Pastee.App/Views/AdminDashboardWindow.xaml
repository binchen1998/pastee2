<Window x:Class="Pastee.App.Views.AdminDashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Dashboard" 
        Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>
        <!-- DataGrid æ ·å¼ -->
        <Style TargetType="DataGrid">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
            <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="VerticalGridLinesBrush" Value="Transparent"/>
        </Style>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        </Style>
        <Style TargetType="DataGridCell">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource SurfaceHoverBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource SurfaceHoverBrush}"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource SurfaceHoverBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource BackgroundBrush}" CornerRadius="12" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.4" Color="Black"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Margin="25,20" MouseLeftButtonDown="OnHeaderMouseDown">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ› " FontSize="24" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <TextBlock Text="Admin Dashboard" FontSize="22" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                </StackPanel>
                <Button HorizontalAlignment="Right" Click="OnClose" Style="{StaticResource IconButtonStyle}" Content="âœ•" FontSize="18"/>
            </Grid>

            <!-- Tabs -->
            <Border Grid.Row="1" Background="{StaticResource SurfaceBrush}" CornerRadius="8" Padding="10,8" Margin="25,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="TabDashboard" Content="ðŸ“Š Dashboard" Click="OnTabClick" Tag="Dashboard" Margin="0,0,8,0" Style="{StaticResource IconButtonStyle}" Padding="12,8"/>
                    <Button x:Name="TabUsers" Content="ðŸ‘¥ Users" Click="OnTabClick" Tag="Users" Margin="0,0,8,0" Style="{StaticResource IconButtonStyle}" Padding="12,8"/>
                    <Button x:Name="TabVersions" Content="ðŸ“¦ Versions" Click="OnTabClick" Tag="Versions" Style="{StaticResource IconButtonStyle}" Padding="12,8"/>
                </StackPanel>
            </Border>

            <!-- Content Area -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="25,20,25,25">
                <!-- Loading Indicator -->
                <Grid x:Name="LoadingPanel" Visibility="Collapsed">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Loading..." FontSize="16" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </ScrollViewer>

            <!-- Dashboard Content -->
            <ScrollViewer x:Name="DashboardContent" Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="25,20,25,25">
                <StackPanel>
                    <!-- Stats Cards -->
                    <UniformGrid Columns="4" Margin="0,0,0,20">
                        <!-- Total Users -->
                        <Border Background="{StaticResource SurfaceBrush}" CornerRadius="8" Padding="20" Margin="0,0,10,0">
                            <StackPanel>
                                <TextBlock Text="Total Users" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                                <TextBlock x:Name="TotalUsersText" Text="0" FontSize="32" FontWeight="Bold" Foreground="{StaticResource AccentBrush}" Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Today New -->
                        <Border Background="{StaticResource SurfaceBrush}" CornerRadius="8" Padding="20" Margin="5,0">
                            <StackPanel>
                                <TextBlock Text="Today New" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                    <TextBlock x:Name="TodayNewText" Text="0" FontSize="32" FontWeight="Bold" Foreground="#4CAF50"/>
                                    <TextBlock x:Name="TodayNewChangeText" Text="" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Bottom" Margin="8,0,0,6"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        
                        <!-- Today Active -->
                        <Border Background="{StaticResource SurfaceBrush}" CornerRadius="8" Padding="20" Margin="5,0">
                            <StackPanel>
                                <TextBlock Text="Today Active" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                    <TextBlock x:Name="TodayActiveText" Text="0" FontSize="32" FontWeight="Bold" Foreground="#2196F3"/>
                                    <TextBlock x:Name="TodayActiveChangeText" Text="" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Bottom" Margin="8,0,0,6"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        
                        <!-- Weekly Avg -->
                        <Border Background="{StaticResource SurfaceBrush}" CornerRadius="8" Padding="20" Margin="10,0,0,0">
                            <StackPanel>
                                <TextBlock Text="Weekly Avg New" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                                <TextBlock x:Name="WeeklyAvgText" Text="0" FontSize="32" FontWeight="Bold" Foreground="#FF9800" Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>
                    </UniformGrid>

                    <!-- Weekly Trend Table -->
                    <TextBlock Text="Last 7 Days Trend" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,10,0,12"/>
                    <Border Background="{StaticResource SurfaceBrush}" CornerRadius="8" Padding="0">
                        <DataGrid x:Name="TrendDataGrid" 
                                  AutoGenerateColumns="False" 
                                  IsReadOnly="True"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="Horizontal"
                                  BorderThickness="0"
                                  Background="Transparent"
                                  RowBackground="{StaticResource SurfaceBrush}"
                                  AlternatingRowBackground="{StaticResource BackgroundBrush}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="*"/>
                                <DataGridTextColumn Header="New Registrations" Binding="{Binding NewRegistrations}" Width="*"/>
                                <DataGridTextColumn Header="Active Users" Binding="{Binding ActiveUsers}" Width="*"/>
                                <DataGridTextColumn Header="Total Users" Binding="{Binding TotalUsers}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Users Content -->
            <Grid x:Name="UsersContent" Grid.Row="2" Margin="25,20,25,25" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Search -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="UserSearchBox" 
                             Padding="12" 
                             FontSize="14"
                             Background="{StaticResource SurfaceBrush}"
                             Foreground="{StaticResource TextPrimaryBrush}"
                             BorderBrush="{StaticResource BorderBrush}"
                             KeyDown="OnUserSearchKeyDown"/>
                    <Button Grid.Column="1" Content="Search" Style="{StaticResource PrimaryButtonStyle}" Margin="10,0,0,0" Click="OnUserSearchClick"/>
                </Grid>

                <!-- Users List -->
                <Border Grid.Row="1" Background="{StaticResource SurfaceBrush}" CornerRadius="8">
                    <DataGrid x:Name="UsersDataGrid" 
                              AutoGenerateColumns="False" 
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              BorderThickness="0"
                              Background="Transparent"
                              RowBackground="{StaticResource SurfaceBrush}"
                              AlternatingRowBackground="{StaticResource BackgroundBrush}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                            <DataGridTextColumn Header="Created" Binding="{Binding CreatedAt}" Width="120"/>
                            <DataGridTextColumn Header="Last Active" Binding="{Binding LastActive}" Width="120"/>
                            <DataGridCheckBoxColumn Header="Verified" Binding="{Binding IsVerified}" Width="70"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>

                <!-- Pagination -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                    <Button x:Name="PrevPageBtn" Content="â† Previous" Style="{StaticResource LinkButtonStyle}" Click="OnPrevPageClick"/>
                    <TextBlock x:Name="PageInfoText" Text="Page 1" Foreground="{StaticResource TextSecondaryBrush}" Margin="20,0" VerticalAlignment="Center"/>
                    <Button x:Name="NextPageBtn" Content="Next â†’" Style="{StaticResource LinkButtonStyle}" Click="OnNextPageClick"/>
                </StackPanel>
            </Grid>

            <!-- Versions Content -->
            <Grid x:Name="VersionsContent" Grid.Row="2" Margin="25,20,25,25" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- New Version Form -->
                <Border Background="{StaticResource SurfaceBrush}" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Publish New Version" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,15"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Margin="0,0,10,0">
                                <TextBlock Text="Version" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,0,0,4"/>
                                <TextBox x:Name="NewVersionText" Padding="10" Background="{StaticResource BackgroundBrush}" Foreground="{StaticResource TextPrimaryBrush}" BorderBrush="{StaticResource BorderBrush}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="Download URL" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,0,0,4"/>
                                <TextBox x:Name="DownloadUrlText" Padding="10" Background="{StaticResource BackgroundBrush}" Foreground="{StaticResource TextPrimaryBrush}" BorderBrush="{StaticResource BorderBrush}"/>
                            </StackPanel>
                        </Grid>
                        <TextBlock Text="Release Notes" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,15,0,4"/>
                        <TextBox x:Name="ReleaseNotesText" Padding="10" Height="80" TextWrapping="Wrap" AcceptsReturn="True" Background="{StaticResource BackgroundBrush}" Foreground="{StaticResource TextPrimaryBrush}" BorderBrush="{StaticResource BorderBrush}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                            <CheckBox x:Name="IsMandatoryCheck" Content="Mandatory Update" Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                            <Button Content="Publish Version" Style="{StaticResource PrimaryButtonStyle}" Margin="20,0,0,0" Click="OnPublishVersionClick"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Version List -->
                <Border Grid.Row="1" Background="{StaticResource SurfaceBrush}" CornerRadius="8">
                    <DataGrid x:Name="VersionsDataGrid" 
                              AutoGenerateColumns="False" 
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              BorderThickness="0"
                              Background="Transparent"
                              RowBackground="{StaticResource SurfaceBrush}"
                              AlternatingRowBackground="{StaticResource BackgroundBrush}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Version" Binding="{Binding Version}" Width="100"/>
                            <DataGridTextColumn Header="Release Notes" Binding="{Binding ReleaseNotes}" Width="*"/>
                            <DataGridCheckBoxColumn Header="Mandatory" Binding="{Binding IsMandatory}" Width="80"/>
                            <DataGridTextColumn Header="Created" Binding="{Binding CreatedAt}" Width="150"/>
                            <DataGridTemplateColumn Header="Actions" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="ðŸ—‘" 
                                                Style="{StaticResource DeleteButtonStyle}"
                                                Click="OnDeleteVersionClick"
                                                Tag="{Binding}"
                                                ToolTip="Delete Version"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>

            <!-- Error Message -->
            <Border x:Name="ErrorPanel" Grid.Row="2" 
                    Background="#1AFF5252" 
                    BorderBrush="{StaticResource DeleteBrush}" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="20" 
                    Margin="25,20"
                    VerticalAlignment="Top"
                    Visibility="Collapsed">
                <TextBlock x:Name="ErrorText" Foreground="{StaticResource DeleteBrush}" TextWrapping="Wrap" TextAlignment="Center"/>
            </Border>
        </Grid>
    </Border>
</Window>

