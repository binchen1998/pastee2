<Window x:Class="Pastee.App.Views.ClipboardPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:Pastee.App.Models"
        xmlns:infra="clr-namespace:Pastee.App.Infrastructure"
        mc:Ignorable="d"
        Title="Clipboard" 
        Width="520" Height="500"
        MinWidth="380" MinHeight="300"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        ShowActivated="False"
        Focusable="True"
        ResizeMode="CanResizeWithGrip">
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" 
                      ResizeBorderThickness="8" 
                      GlassFrameThickness="0" 
                      CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <infra:ImagePathConverter x:Key="ImagePathConverter"/>
        <infra:EmptyStringToVisibilityConverter x:Key="EmptyStringToVisibilityConverter"/>
        <infra:IntToVisibilityConverter x:Key="IntToVisibilityConverter"/>
        <infra:RelativeTimeConverter x:Key="RelativeTimeConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <DataTemplate x:Key="ClipboardCardTemplate" DataType="{x:Type models:ClipboardEntry}">
            <Border x:Name="ItemBorder"
                    Background="{StaticResource SurfaceBrush}"
                    CornerRadius="8"
                    Padding="12,10"
                    Margin="0,0,0,6"
                    Cursor="Hand"
                    BorderThickness="1"
                    BorderBrush="Transparent"
                    MouseMove="ItemCard_MouseMove"
                    PreviewMouseLeftButtonDown="ItemCard_PreviewMouseLeftButtonDown"
                    MouseEnter="ItemCard_MouseEnter">
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource SurfaceHoverBrush}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Border.InputBindings>
                    <MouseBinding MouseAction="LeftClick" 
                                  Command="{Binding DataContext.CopyItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                  CommandParameter="{Binding}"/>
                </Border.InputBindings>
                <Grid>
                    <ContentControl>
                        <ContentControl.Style>
                            <Style TargetType="ContentControl">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <TextBlock Text="{Binding Content}"
                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                   FontFamily="{StaticResource MainFont}"
                                                   FontSize="13"
                                                   TextTrimming="CharacterEllipsis"
                                                   MaxHeight="40"
                                                   TextWrapping="Wrap"/>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ContentType}" Value="image">
                                        <Setter Property="Content">
                                            <Setter.Value>
                                                <Grid Margin="0,0,0,4">
                                                    <Border Background="{StaticResource BackgroundBrush}"
                                                            Height="100"
                                                            CornerRadius="6"
                                                            Padding="4">
                                                        <Image Source="{Binding DisplayImageData, Converter={StaticResource ImagePathConverter}}"
                                                               Stretch="Uniform"/>
                                                    </Border>
                                                    <Border Background="#80000000" CornerRadius="4" Padding="4,2" Margin="8" HorizontalAlignment="Right" VerticalAlignment="Top" Visibility="{Binding IsThumbnail, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                        <TextBlock Text="thumbnail" FontSize="10" Foreground="White"/>
                                                    </Border>
                                                </Grid>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ContentControl.Style>
                    </ContentControl>

                    <!-- Time Overlay (shown on hover) -->
                    <Border x:Name="TimeInfo"
                            HorizontalAlignment="Left" VerticalAlignment="Bottom"
                            Background="#B0000000" CornerRadius="4" Padding="6,2" Margin="-4,-4,-4,-4"
                            Visibility="Hidden">
                        <TextBlock x:Name="TimeText"
                                   Text="{Binding CreatedAt, Converter={StaticResource RelativeTimeConverter}}"
                                   Foreground="White"
                                   FontFamily="{StaticResource MainFont}"
                                   FontSize="10"/>
                    </Border>

                    <!-- Important (Bookmark) Toggle (Hover Only) -->
                    <Button x:Name="BookmarkButton"
                            HorizontalAlignment="Right" VerticalAlignment="Top"
                            Background="Transparent" BorderThickness="0"
                            Command="{Binding DataContext.ToggleBookmarkCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            CommandParameter="{Binding}"
                            Cursor="Hand"
                            Margin="0,-5,-5,0"
                            Visibility="Hidden">
                        <TextBlock FontSize="18">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="â™¡"/>
                                    <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsBookmarked}" Value="True">
                                            <Setter Property="Text" Value="â¤"/>
                                            <Setter Property="Foreground" Value="{StaticResource DeleteBrush}"/>
                                            <Setter Property="FontSize" Value="15"/>
                                        </DataTrigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="{StaticResource DeleteBrush}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Button>

                    <!-- Upload Status Indicator -->
                    <Border x:Name="UploadingIndicator" 
                            HorizontalAlignment="Left" VerticalAlignment="Top"
                            Background="#80000000" CornerRadius="4" Padding="6,3" Margin="-4,-4,0,0"
                            Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="â³" FontSize="10" Margin="0,0,4,0"/>
                            <TextBlock Text="Uploading..." FontSize="10" Foreground="White"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Upload Failed Indicator with Retry -->
                    <Border x:Name="UploadFailedIndicator" 
                            HorizontalAlignment="Left" VerticalAlignment="Top"
                            Background="#CC8B0000" CornerRadius="4" Padding="6,3" Margin="-4,-4,0,0"
                            Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âš " FontSize="10" Foreground="#F38BA8" Margin="0,0,4,0"/>
                            <TextBlock Text="Failed" FontSize="10" Foreground="White" Margin="0,0,6,0"/>
                            <Button Content="â†»" 
                                    FontSize="10" 
                                    Padding="4,0"
                                    Background="Transparent" 
                                    BorderThickness="0"
                                    Foreground="White"
                                    Cursor="Hand"
                                    Command="{Binding DataContext.RetryUploadCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}"
                                    ToolTip="Retry Upload"/>
                        </StackPanel>
                    </Border>

                    <!-- Downloading Original Image Indicator -->
                    <Border x:Name="DownloadingIndicator" 
                            HorizontalAlignment="Right" VerticalAlignment="Bottom"
                            Background="#80000000" CornerRadius="4" Padding="6,3" Margin="0,0,-4,-4"
                            Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="â¬‡" FontSize="10" Foreground="#89B4FA" Margin="0,0,4,0"/>
                            <TextBlock Text="Downloading..." FontSize="10" Foreground="White"/>
                        </StackPanel>
                    </Border>

                    <!-- Hover Actions -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" x:Name="ActionButtons" Visibility="Collapsed">
                        <Button Content="âœŽ" Style="{StaticResource IconButtonStyle}"
                                Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"
                                x:Name="EditButton"/>
                        <Button Content="ðŸ‘" Style="{StaticResource IconButtonStyle}"
                                Command="{Binding DataContext.ViewImageCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"
                                x:Name="ViewButton"
                                ToolTip="View Image"
                                Visibility="Collapsed"/>
                        <Button Content="ðŸ—‘" Style="{StaticResource DeleteButtonStyle}"
                                Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"/>
                    </StackPanel>
                </Grid>
            </Border>
            <DataTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True" SourceName="ItemBorder">
                    <Setter TargetName="ActionButtons" Property="Visibility" Value="Visible"/>
                    <Setter TargetName="TimeInfo" Property="Visibility" Value="Visible"/>
                    <Setter TargetName="BookmarkButton" Property="Visibility" Value="Visible"/>
                </Trigger>
                <DataTrigger Binding="{Binding ContentType}" Value="image">
                    <Setter TargetName="EditButton" Property="Visibility" Value="Collapsed"/>
                    <Setter TargetName="ViewButton" Property="Visibility" Value="Visible"/>
                </DataTrigger>
                <!-- Upload Status Triggers -->
                <DataTrigger Binding="{Binding IsUploading}" Value="True">
                    <Setter TargetName="UploadingIndicator" Property="Visibility" Value="Visible"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding UploadFailed}" Value="True">
                    <Setter TargetName="UploadFailedIndicator" Property="Visibility" Value="Visible"/>
                </DataTrigger>
                <!-- Downloading Original Image Trigger -->
                <DataTrigger Binding="{Binding IsDownloadingOriginal}" Value="True">
                    <Setter TargetName="DownloadingIndicator" Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
    </Window.Resources>

    <Border Background="{StaticResource BackgroundBrush}" CornerRadius="12" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.4" Color="Black"/>
        </Border.Effect>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="SidebarColumn" Width="140"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Border x:Name="SidebarBorder" Background="{StaticResource BackgroundBrush}" Padding="12,16" CornerRadius="12,0,0,12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Brand Logo -->
                    <TextBlock Grid.Row="0" 
                               Text="Pastee" 
                               Foreground="{StaticResource AccentBrush}" 
                               FontSize="22" 
                               FontWeight="Bold"
                               FontFamily="{StaticResource MainFont}"
                               Margin="0,0,0,20"/>
                    
                    <StackPanel Grid.Row="1">
                        <!-- Main Navigation -->
                        <Button Command="{Binding SelectCategoryCommand}"
                                CommandParameter="all"
                                Style="{StaticResource LinkButtonStyle}"
                                HorizontalContentAlignment="Left"
                                Margin="0,0,0,8">
                            <TextBlock Text="All" HorizontalAlignment="Left">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedCategory}" Value="all">
                                                <Setter Property="FontWeight" Value="Bold"/>
                                                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Button>

                        <Button Command="{Binding SelectCategoryCommand}"
                                CommandParameter="bookmarked"
                                Style="{StaticResource LinkButtonStyle}"
                                HorizontalContentAlignment="Left"
                                Margin="0,0,0,8">
                            <TextBlock Text="Important" HorizontalAlignment="Left">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedCategory}" Value="bookmarked">
                                                <Setter Property="FontWeight" Value="Bold"/>
                                                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Button>

                        <Button Command="{Binding SelectCategoryCommand}"
                                CommandParameter="drafts"
                                Style="{StaticResource LinkButtonStyle}"
                                HorizontalContentAlignment="Left"
                                Margin="0,0,0,8"
                                Visibility="{Binding DraftCount, Converter={StaticResource IntToVisibilityConverter}}">
                            <Grid HorizontalAlignment="Left">
                                <TextBlock Text="Drafts" HorizontalAlignment="Left">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedCategory}" Value="drafts">
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <Border Background="{StaticResource DeleteBrush}" CornerRadius="8" Padding="4,1" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="45,0,-25,0"
                                        Visibility="{Binding DraftCount, Converter={StaticResource IntToVisibilityConverter}}">
                                    <TextBlock Text="{Binding DraftCount}" Foreground="White" FontSize="9" FontWeight="Bold"/>
                                </Border>
                            </Grid>
                        </Button>

                        <Separator Background="{StaticResource BorderBrush}" Margin="0,10,0,15"/>

                        <!-- Categories Header with Actions -->
                        <Grid Margin="0,0,0,10">
                            <TextBlock Text="Categories" Foreground="{StaticResource TextSecondaryBrush}" FontSize="11" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="+" 
                                        Command="{Binding CreateCategoryCommand}"
                                        Style="{StaticResource LinkButtonStyle}"
                                        FontSize="16"
                                        Padding="2"
                                        Margin="0,0,4,0"
                                        ToolTip="Add"/>
                                <Button Content="â†»" 
                                        Command="{Binding RefreshCategoriesCommand}"
                                        Style="{StaticResource LinkButtonStyle}"
                                        FontSize="14"
                                        Padding="2"
                                        ToolTip="Refresh"/>
                            </StackPanel>
                        </Grid>

                        <!-- Categories List -->
                        <ItemsControl ItemsSource="{Binding Categories}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid x:Name="CategoryRow" Background="Transparent" Height="32">
                                        <Button Command="{Binding DataContext.SelectCategoryCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding Name}"
                                                Style="{StaticResource LinkButtonStyle}"
                                                HorizontalContentAlignment="Left"
                                                VerticalContentAlignment="Center"
                                                VerticalAlignment="Stretch"
                                                AllowDrop="True"
                                                Drop="CategoryButton_Drop"
                                                DragOver="CategoryButton_DragOver">
                                            <TextBlock Text="{Binding Name}" TextTrimming="CharacterEllipsis" MaxWidth="90" HorizontalAlignment="Left" VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                <Setter Property="FontWeight" Value="Bold"/>
                                                                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Button>
                                        
                                        <!-- Delete Button visible on hover -->
                                        <Button Content="Ã—" 
                                                x:Name="DelBtn"
                                                Visibility="Collapsed"
                                                HorizontalAlignment="Right" 
                                                VerticalAlignment="Center"
                                                Foreground="{StaticResource DeleteBrush}"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                FontSize="18"
                                                Cursor="Hand"
                                                Command="{Binding DataContext.DeleteCategoryCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"/>
                                    </Grid>
                                    <DataTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True" SourceName="CategoryRow">
                                            <Setter TargetName="DelBtn" Property="Visibility" Value="Visible"/>
                                        </Trigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- WebSocket Status (Moved to sidebar bottom) -->
                    <Border Grid.Row="2" Margin="0,10,0,0" Padding="0,10,0,0" BorderThickness="0,1,0,0" BorderBrush="{StaticResource BorderBrush}">
                        <Grid>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Ellipse Width="8" Height="8" Fill="{Binding WsStatusColor}" Margin="0,0,8,0">
                                    <Ellipse.Effect>
                                        <DropShadowEffect BlurRadius="8" Color="{Binding WsStatusColor}" Opacity="0.6" ShadowDepth="0"/>
                                    </Ellipse.Effect>
                                </Ellipse>
                                <TextBlock Text="{Binding WsStatus}" Foreground="{StaticResource TextSecondaryBrush}" FontSize="11" VerticalAlignment="Center"/>
                            </StackPanel>
                            <!-- Socket Refresh/Fix Button -->
                            <Button HorizontalAlignment="Right" 
                                    Command="{Binding ReconnectCommand}" 
                                    Style="{StaticResource IconButtonStyle}" 
                                    Content="â†»" 
                                    FontSize="12"
                                    Padding="4,2"
                                    ToolTip="Reconnect WebSocket"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Column="1" Margin="16">
                <!-- Draggable Header Area -->
                <Border Background="Transparent" Height="40" VerticalAlignment="Top" 
                        MouseLeftButtonDown="OnHeaderMouseDown" Cursor="SizeAll"/>
                
                <!-- Top Right Actions: Clear Drafts, Search, Refresh, Close -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" 
                            Margin="0,0,0,0" Panel.ZIndex="10">
                    <!-- Clear Drafts Button (only visible in drafts category) -->
                    <Button x:Name="ClearDraftsButton"
                            Content="ðŸ—‘ Clear All"
                            Height="32"
                            Padding="8,4"
                            FontSize="11"
                            Margin="0,0,4,0"
                            Style="{StaticResource IconButtonStyle}"
                            Click="OnClearDraftsClick"
                            ToolTip="Clear all drafts"
                            Visibility="Collapsed"/>
                    
                    <!-- Toggle Sidebar Button -->
                    <Button x:Name="ToggleSidebarButton"
                            Style="{StaticResource IconButtonStyle}"
                            Content="â—€" 
                            FontSize="12"
                            Width="32" Height="32"
                            Click="OnToggleSidebarClick"
                            ToolTip="Toggle Sidebar"/>
                    
                    <!-- Settings Button -->
                    <Button Style="{StaticResource IconButtonStyle}"
                            Content="âš™" 
                            FontSize="15"
                            Width="32" Height="32"
                            Click="OnSettingsButtonClick"
                            ToolTip="Settings"/>
                    
                    <!-- Search Button -->
                    <Button Style="{StaticResource IconButtonStyle}"
                            Content="ðŸ”" 
                            FontSize="15"
                            Width="32" Height="32"
                            Click="SearchButton_Click"
                            ToolTip="Search (Ctrl+F)"/>
                    
                    <!-- Refresh Button -->
                    <Button Style="{StaticResource IconButtonStyle}"
                            Command="{Binding RefreshCommand}" 
                            Content="â†»" 
                            FontSize="18"
                            Width="32" Height="32"
                            ToolTip="Refresh List"/>
                    
                    <!-- Close Button -->
                    <Button Style="{StaticResource IconButtonStyle}"
                            Content="âœ•" 
                            FontSize="15"
                            Width="32" Height="32"
                            Click="OnCloseButtonClick"
                            ToolTip="Hide (Esc)"/>
                </StackPanel>

                <!-- List -->
                <ScrollViewer x:Name="ItemsScrollViewer" VerticalScrollBarVisibility="Auto" ScrollChanged="OnScrollChanged" Margin="0,40,0,0">
                    <StackPanel>
                        <ItemsControl ItemsSource="{Binding FilteredItems}" ItemTemplate="{StaticResource ClipboardCardTemplate}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                        
                        <Border Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" Padding="20">
                            <TextBlock Text="{Binding LoadingText}" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <!-- Toast Notification -->
                <Border x:Name="ToastBorder" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,30"
                        Background="#EE2a2a3c" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="20" Padding="24,10"
                        Visibility="Collapsed" IsHitTestVisible="False">
                    <TextBlock Text="Copied" Foreground="White" FontSize="14" FontWeight="SemiBold"/>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
