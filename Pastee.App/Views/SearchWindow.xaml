<Window x:Class="Pastee.App.Views.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:Pastee.App.Models"
        xmlns:infra="clr-namespace:Pastee.App.Infrastructure"
        mc:Ignorable="d"
        Title="Search" 
        Width="480" Height="500"
        MinWidth="350" MinHeight="300"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip">
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" 
                      ResizeBorderThickness="8" 
                      GlassFrameThickness="0" 
                      CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <infra:ImagePathConverter x:Key="ImagePathConverter"/>
        <infra:RelativeTimeConverter x:Key="RelativeTimeConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <DataTemplate x:Key="SearchResultTemplate" DataType="{x:Type models:ClipboardEntry}">
            <Border x:Name="ItemBorder"
                    Background="{StaticResource SurfaceBrush}"
                    CornerRadius="8"
                    Padding="12,10"
                    Margin="0,0,0,6"
                    Cursor="Hand"
                    BorderThickness="1"
                    BorderBrush="Transparent"
                    MouseLeftButtonDown="ResultItem_Click">
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource SurfaceHoverBrush}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ContentControl Grid.Row="0">
                        <ContentControl.Style>
                            <Style TargetType="ContentControl">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <TextBlock Text="{Binding Content}"
                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                   FontFamily="{StaticResource MainFont}"
                                                   FontSize="13"
                                                   TextTrimming="CharacterEllipsis"
                                                   MaxHeight="60"
                                                   TextWrapping="Wrap"/>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ContentType}" Value="image">
                                        <Setter Property="Content">
                                            <Setter.Value>
                                                <Grid Margin="0,0,0,4">
                                                    <Border Background="{StaticResource BackgroundBrush}"
                                                            Height="80"
                                                            CornerRadius="6"
                                                            Padding="4">
                                                        <Image Source="{Binding DisplayImageData, Converter={StaticResource ImagePathConverter}}"
                                                               Stretch="Uniform"/>
                                                    </Border>
                                                    <Border Background="#80000000" CornerRadius="4" Padding="4,2" Margin="8" HorizontalAlignment="Right" VerticalAlignment="Top" Visibility="{Binding IsThumbnail, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                        <TextBlock Text="thumbnail" FontSize="10" Foreground="White"/>
                                                    </Border>
                                                </Grid>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ContentControl.Style>
                    </ContentControl>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,6,0,0">
                        <TextBlock Text="{Binding CreatedAt, Converter={StaticResource RelativeTimeConverter}}"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontFamily="{StaticResource MainFont}"
                                   FontSize="11"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <Border Background="{StaticResource BackgroundBrush}" CornerRadius="12" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.5" Color="Black"/>
        </Border.Effect>
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header with Close Button -->
            <Grid Grid.Row="0" Margin="0,0,0,15">
                <TextBlock Text="ðŸ” Search Clips" 
                           Foreground="{StaticResource TextPrimaryBrush}" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>
                <Button HorizontalAlignment="Right" VerticalAlignment="Top" 
                        Style="{StaticResource IconButtonStyle}"
                        Content="âœ•" 
                        FontSize="12"
                        Width="24" Height="24"
                        Click="OnCloseButtonClick"
                        ToolTip="Close (Esc)"/>
            </Grid>

            <!-- Search Input -->
            <Border Grid.Row="1" Background="{StaticResource SurfaceBrush}" CornerRadius="8" Margin="0,0,0,15" Padding="12,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="SearchInput" 
                             Grid.Column="0"
                             Background="Transparent" 
                             BorderThickness="0" 
                             Foreground="{StaticResource TextPrimaryBrush}" 
                             FontFamily="{StaticResource MainFont}" 
                             FontSize="14"
                             CaretBrush="{StaticResource AccentBrush}"
                             VerticalAlignment="Center"
                             TextChanged="SearchInput_TextChanged"
                             KeyDown="SearchInput_KeyDown"/>
                    <TextBlock Grid.Column="0" 
                               IsHitTestVisible="False" 
                               Text="Type and press Enter to search..." 
                               Foreground="{StaticResource TextSecondaryBrush}" 
                               FontSize="14"
                               VerticalAlignment="Center"
                               x:Name="PlaceholderText"/>
                    
                    <!-- Search/Clear Button -->
                    <Button Grid.Column="1" 
                            x:Name="ClearButton"
                            Style="{StaticResource IconButtonStyle}" 
                            Content="âœ•" 
                            FontSize="12"
                            Visibility="Collapsed"
                            VerticalAlignment="Center"
                            Margin="8,0,0,0"
                            Click="ClearButton_Click"
                            ToolTip="Clear"/>
                </Grid>
            </Border>

            <!-- Results List -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" x:Name="ResultsScroller" ScrollChanged="OnScrollChanged">
                <StackPanel>
                    <ItemsControl x:Name="ResultsList" ItemTemplate="{StaticResource SearchResultTemplate}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                    
                    <!-- Loading Indicator -->
                    <Border x:Name="LoadingIndicator" Visibility="Collapsed" Padding="20">
                        <TextBlock Text="Searching..." Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                    </Border>
                    
                    <!-- No Results -->
                    <Border x:Name="NoResultsIndicator" Visibility="Collapsed" Padding="40">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="ðŸ˜”" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="No results found" Foreground="{StaticResource TextSecondaryBrush}" FontSize="14" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Initial State -->
                    <Border x:Name="InitialStateIndicator" Visibility="Visible" Padding="40">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="ðŸ”Ž" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="Press Enter to search" Foreground="{StaticResource TextSecondaryBrush}" FontSize="14" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Toast Notification -->
            <Border x:Name="ToastBorder" Grid.RowSpan="3" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,20"
                    Background="#EE2a2a3c" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="20" Padding="24,10"
                    Visibility="Collapsed" IsHitTestVisible="False">
                <TextBlock Text="Copied" Foreground="White" FontSize="14" FontWeight="SemiBold"/>
            </Border>
        </Grid>
    </Border>
</Window>

