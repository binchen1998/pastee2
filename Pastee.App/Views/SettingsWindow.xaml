<Window x:Class="Pastee.App.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" 
        Height="650" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        Topmost="True">
    <Window.Resources>
        <Style x:Key="SettingItemStyle" TargetType="Grid">
            <Setter Property="Margin" Value="0,15"/>
        </Style>
        
        <Style x:Key="SwitchStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="22"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border x:Name="Background" Background="{StaticResource BorderBrush}" CornerRadius="11"/>
                            <Ellipse x:Name="Dot" Width="18" Height="18" Fill="White" HorizontalAlignment="Left" Margin="2,0">
                                <Ellipse.RenderTransform>
                                    <TranslateTransform X="0"/>
                                </Ellipse.RenderTransform>
                            </Ellipse>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Background" Property="Background" Value="#4caf50"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Dot" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)" To="22" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Dot" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)" To="0" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource BackgroundBrush}" CornerRadius="12" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.4" Color="Black"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Margin="25,20">
                <TextBlock Text="Settings" FontSize="22" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                <Button HorizontalAlignment="Right" Click="OnClose" Style="{StaticResource IconButtonStyle}" Content="âœ•" FontSize="18"/>
            </Grid>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="25,0,25,25">
                    <!-- Account Section -->
                    <TextBlock Text="Account" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,0,0,10"/>
                    <Border Background="{StaticResource SurfaceBrush}" CornerRadius="8" Padding="15">
                        <StackPanel>
                            <TextBlock Text="Email" Foreground="{StaticResource TextSecondaryBrush}" FontSize="11" Margin="0,0,0,4"/>
                            <TextBlock x:Name="EmailText" Text="admin@pastee.im" FontSize="15" FontWeight="Medium" Foreground="{StaticResource TextPrimaryBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- Admin Panel Button (only visible for admin) -->
                    <Grid x:Name="AdminPanelSection" Visibility="Collapsed" Margin="0,15,0,0">
                        <Border Background="{StaticResource SurfaceBrush}" CornerRadius="8" Padding="15" Cursor="Hand" MouseLeftButtonDown="OnAdminPanelClick">
                            <Grid>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ› " FontSize="20" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                    <StackPanel>
                                        <TextBlock Text="Admin Panel" FontSize="15" FontWeight="Medium" Foreground="{StaticResource AccentBrush}"/>
                                        <TextBlock Text="Manage users, versions, and settings" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </StackPanel>
                                </StackPanel>
                                <TextBlock Text="â†’" FontSize="18" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </Grid>

                    <Separator Background="{StaticResource BorderBrush}" Margin="0,25"/>

                    <!-- Shortcuts -->
                    <Grid Style="{StaticResource SettingItemStyle}" Cursor="Hand" Background="Transparent" MouseLeftButtonDown="OnHotkeySettingsClick">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="âŒ¨" FontSize="20" Foreground="#2ecc71" VerticalAlignment="Top" Margin="0,5,0,0" IsHitTestVisible="False"/>
                        <StackPanel Grid.Column="1" IsHitTestVisible="False">
                            <TextBlock Text="Shortcut Settings" FontSize="15" FontWeight="Medium" Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock Text="Configure global keyboard shortcuts" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Auto Launch -->
                    <Grid Style="{StaticResource SettingItemStyle}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="â»" FontSize="20" Foreground="#27ae60" VerticalAlignment="Top" Margin="0,5,0,0"/>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Launch on Start" FontSize="15" FontWeight="Medium" Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock Text="Start Pastee automatically when system boots" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>
                        <CheckBox x:Name="AutoStartCheckBox" Grid.Column="2" Style="{StaticResource SwitchStyle}" VerticalAlignment="Center" Click="OnAutoStartToggle"/>
                    </Grid>

                    <!-- Hide After Paste -->
                    <Grid Style="{StaticResource SettingItemStyle}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="ðŸ‘" FontSize="20" Foreground="#9b59b6" VerticalAlignment="Top" Margin="0,5,0,0"/>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Hide After Paste" FontSize="15" FontWeight="Medium" Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock Text="Automatically hide window after pasting" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>
                        <CheckBox x:Name="HideAfterPasteCheckBox" Grid.Column="2" Style="{StaticResource SwitchStyle}" VerticalAlignment="Center" Click="OnHideAfterPasteToggle"/>
                    </Grid>

                    <!-- Always On Top -->
                    <Grid Style="{StaticResource SettingItemStyle}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="ðŸ“Œ" FontSize="20" Foreground="#2980b9" VerticalAlignment="Top" Margin="0,5,0,0"/>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Always On Top" FontSize="15" FontWeight="Medium" Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock Text="Keep Pastee window above others" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>
                        <CheckBox x:Name="AlwaysOnTopCheckBox" Grid.Column="2" Style="{StaticResource SwitchStyle}" VerticalAlignment="Center" Click="OnAlwaysOnTopToggle"/>
                    </Grid>

                    <!-- Theme Toggle -->
                    <Grid Style="{StaticResource SettingItemStyle}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="ThemeIcon" Text="ðŸŒ™" FontSize="20" Foreground="#f39c12" VerticalAlignment="Top" Margin="0,5,0,0"/>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Dark Mode" FontSize="15" FontWeight="Medium" Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock x:Name="ThemeDescription" Text="Switch between dark and light themes" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>
                        <CheckBox x:Name="DarkModeCheckBox" Grid.Column="2" Style="{StaticResource SwitchStyle}" VerticalAlignment="Center" Click="OnThemeToggle"/>
                    </Grid>

                    <!-- Clear Cache -->
                    <Grid Style="{StaticResource SettingItemStyle}" Cursor="Hand" Background="Transparent" MouseLeftButtonDown="OnClearCacheClick">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="ðŸ—‘" FontSize="20" Foreground="{StaticResource DeleteBrush}" VerticalAlignment="Top" Margin="0,5,0,0" IsHitTestVisible="False"/>
                        <StackPanel Grid.Column="1" IsHitTestVisible="False">
                            <TextBlock Text="Clear Cache" FontSize="15" FontWeight="Medium" Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock Text="Clear all cached data and images" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </Grid>

                    <Separator Background="{StaticResource BorderBrush}" Margin="0,20"/>

                    <!-- Device Info Section -->
                    <TextBlock Text="Device Information" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,0,0,10"/>
                    <Border Background="{StaticResource SurfaceBrush}" CornerRadius="8" Padding="15">
                        <StackPanel>
                            <TextBlock Text="Device ID" Foreground="{StaticResource TextSecondaryBrush}" FontSize="11" Margin="0,0,0,4"/>
                            <TextBlock x:Name="DeviceIdText" Text="windows-app-client-id" FontSize="13" FontFamily="{StaticResource MonoFont}" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                            <TextBlock Text="Unique device identifier, generated on first launch." FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <Separator Background="{StaticResource BorderBrush}" Margin="0,25"/>

                    <!-- About Section -->
                    <TextBlock Text="About" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,0,0,10"/>
                    <Border Background="{StaticResource SurfaceBrush}" CornerRadius="8" Padding="15">
                        <Grid>
                            <StackPanel>
                                <TextBlock Text="Pastee" Foreground="{StaticResource TextSecondaryBrush}" FontSize="11" Margin="0,0,0,4"/>
                                <TextBlock x:Name="VersionText" Text="Version 1.0.0" FontSize="15" FontWeight="Medium" Foreground="{StaticResource TextPrimaryBrush}"/>
                            </StackPanel>
                            <Button HorizontalAlignment="Right" VerticalAlignment="Center" 
                                    Style="{StaticResource LinkButtonStyle}"
                                    Click="OnCheckUpdatesClick">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ“¥" FontSize="12" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Check Updates" FontSize="13" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Support Section -->
                    <TextBlock Text="Support" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,20,0,10"/>
                    <Border Background="{StaticResource SurfaceBrush}" CornerRadius="8" Padding="15">
                        <StackPanel>
                            <TextBlock Text="Email" Foreground="{StaticResource TextSecondaryBrush}" FontSize="11" Margin="0,0,0,4"/>
                            <TextBlock Text="binary.chen@gmail.com" FontSize="15" FontWeight="Medium" Foreground="{StaticResource AccentBrush}" 
                                       Cursor="Hand" MouseLeftButtonDown="OnSupportEmailClick"/>
                        </StackPanel>
                    </Border>

                    <!-- Logout Button -->
                    <Button Content="Logout" 
                            Margin="0,40,0,0"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Background="{StaticResource DeleteBrush}"
                            Foreground="White"
                            FontSize="16"
                            Click="OnLogoutClick"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
