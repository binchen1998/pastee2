<Window x:Class="Pastee.App.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:infra="clr-namespace:Pastee.App.Infrastructure"
        Title="Pastee - Login" Height="650" Width="450"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Topmost="True">
    <Window.Resources>
        <infra:EmptyStringToVisibilityConverter x:Key="EmptyStringToVisibilityConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="12,16"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="CaretBrush" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="6"/>
                </Style>
            </Style.Resources>
        </Style>

        <Style x:Key="InputPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Padding" Value="12,16"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="CaretBrush" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="0,0,0,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <StackPanel>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Rectangle x:Name="Underline" Height="3" Fill="Transparent" Width="60" Margin="0,8,0,0"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Tag" Value="Selected">
                                <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter TargetName="Underline" Property="Fill" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LinkTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="TextDecorations" Value="Underline"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource BackgroundBrush}" CornerRadius="12" Margin="10" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" Color="#000" Opacity="0.4" ShadowDepth="0"/>
        </Border.Effect>
        <Grid>
            <!-- Close Button (X) -->
            <Button HorizontalAlignment="Right" VerticalAlignment="Top" 
                    Margin="0,15,15,0"
                    Style="{StaticResource IconButtonStyle}"
                    Content="✕" 
                    FontSize="16"
                    Width="30" Height="30"
                    Click="OnClose"
                    Cursor="Hand"/>

            <StackPanel Margin="40,50">
                <!-- Logo & Title -->
                <TextBlock Text="Pastee" FontSize="36" FontWeight="Bold" Foreground="{StaticResource AccentBrush}" HorizontalAlignment="Center"/>
                <TextBlock Text="The best clipboard manager" FontSize="16" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,10,0,40" HorizontalAlignment="Center"/>

                <!-- ============ LOGIN VIEW ============ -->
                <StackPanel Visibility="{Binding IsLoginView, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <!-- Tabs -->
                    <UniformGrid Columns="2" Margin="0,0,0,24">
                        <Button Content="Login" Style="{StaticResource TabButtonStyle}" Tag="Selected" IsEnabled="False"/>
                        <Button Content="Register" Style="{StaticResource TabButtonStyle}" Command="{Binding SwitchToRegisterCommand}"/>
                    </UniformGrid>

                    <!-- Success Message -->
                    <Border Background="#1A4CAF50" BorderBrush="#4CAF50" BorderThickness="1" CornerRadius="6" Padding="12" Margin="0,0,0,16"
                            Visibility="{Binding SuccessMessage, Converter={StaticResource EmptyStringToVisibilityConverter}}">
                        <TextBlock Text="{Binding SuccessMessage}" Foreground="#4CAF50" TextWrapping="Wrap" TextAlignment="Center"/>
                    </Border>

                    <!-- Error Message -->
                    <Border Background="#1AFF5252" BorderBrush="{StaticResource DeleteBrush}" BorderThickness="1" CornerRadius="6" Padding="12" Margin="0,0,0,16"
                            Visibility="{Binding ErrorMessage, Converter={StaticResource EmptyStringToVisibilityConverter}}">
                        <TextBlock Text="{Binding ErrorMessage}" Foreground="{StaticResource DeleteBrush}" TextWrapping="Wrap" TextAlignment="Center"/>
                    </Border>

                    <!-- Email Input -->
                    <Grid>
                        <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource InputTextBoxStyle}"/>
                        <TextBlock Text="Email" IsHitTestVisible="False" Margin="14,18" Foreground="{StaticResource TextSecondaryBrush}" FontSize="16">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Email}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Email}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>

                    <!-- Password Input -->
                    <Grid>
                        <PasswordBox x:Name="LoginPasswordInput" 
                                     Style="{StaticResource InputPasswordBoxStyle}" 
                                     PasswordChanged="PasswordInput_PasswordChanged"/>
                        <TextBlock Text="Password" IsHitTestVisible="False" Margin="14,18" Foreground="{StaticResource TextSecondaryBrush}" FontSize="16" x:Name="LoginPasswordPlaceholder">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>

                    <!-- Login Button -->
                    <Button Content="Login" Style="{StaticResource PrimaryButtonStyle}" Command="{Binding LoginCommand}" Padding="0,14" Margin="0,8,0,0"/>

                    <!-- Loading Indicator -->
                    <TextBlock Text="Signing in..." Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center" Margin="0,12,0,0"
                               Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>

                <!-- ============ REGISTER VIEW ============ -->
                <StackPanel Visibility="{Binding IsRegisterView, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <!-- Tabs -->
                    <UniformGrid Columns="2" Margin="0,0,0,24">
                        <Button Content="Login" Style="{StaticResource TabButtonStyle}" Command="{Binding SwitchToLoginCommand}"/>
                        <Button Content="Register" Style="{StaticResource TabButtonStyle}" Tag="Selected" IsEnabled="False"/>
                    </UniformGrid>

                    <!-- Error Message -->
                    <Border Background="#1AFF5252" BorderBrush="{StaticResource DeleteBrush}" BorderThickness="1" CornerRadius="6" Padding="12" Margin="0,0,0,16"
                            Visibility="{Binding ErrorMessage, Converter={StaticResource EmptyStringToVisibilityConverter}}">
                        <TextBlock Text="{Binding ErrorMessage}" Foreground="{StaticResource DeleteBrush}" TextWrapping="Wrap" TextAlignment="Center"/>
                    </Border>

                    <!-- Email Input -->
                    <Grid>
                        <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource InputTextBoxStyle}"/>
                        <TextBlock Text="Email" IsHitTestVisible="False" Margin="14,18" Foreground="{StaticResource TextSecondaryBrush}" FontSize="16">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Email}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Email}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>

                    <!-- Password Input -->
                    <Grid>
                        <PasswordBox x:Name="RegisterPasswordInput" 
                                     Style="{StaticResource InputPasswordBoxStyle}" 
                                     PasswordChanged="PasswordInput_PasswordChanged"/>
                        <TextBlock Text="Password (min 6 characters)" IsHitTestVisible="False" Margin="14,18" Foreground="{StaticResource TextSecondaryBrush}" FontSize="16" x:Name="RegisterPasswordPlaceholder">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>

                    <!-- Password Hint -->
                    <TextBlock Text="Password must be at least 6 characters" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,-12,0,16"/>

                    <!-- Register Button -->
                    <Button Content="Create Account" Style="{StaticResource PrimaryButtonStyle}" Command="{Binding RegisterCommand}" Padding="0,14" Margin="0,8,0,0"/>

                    <!-- Loading Indicator -->
                    <TextBlock Text="Creating account..." Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center" Margin="0,12,0,0"
                               Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                    <!-- Terms -->
                    <TextBlock Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" TextAlignment="Center" Margin="0,20,0,0" TextWrapping="Wrap">
                        By creating an account, you agree to our Terms of Service and Privacy Policy.
                    </TextBlock>
                </StackPanel>

                <!-- ============ VERIFY EMAIL VIEW ============ -->
                <StackPanel Visibility="{Binding IsVerifyEmailView, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <!-- Back Button -->
                    <Button Style="{StaticResource LinkButtonStyle}" HorizontalAlignment="Left" Margin="0,0,0,20" Command="{Binding BackToLoginCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="←" Margin="0,0,8,0"/>
                            <TextBlock Text="Back to Login"/>
                        </StackPanel>
                    </Button>

                    <!-- Title -->
                    <TextBlock Text="Verify Your Email" FontSize="24" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                    <TextBlock TextAlignment="Center" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,24" TextWrapping="Wrap">
                        <Run Text="We sent a verification code to"/>
                        <LineBreak/>
                        <Run Text="{Binding Email, Mode=OneWay}" FontWeight="SemiBold" Foreground="{StaticResource AccentBrush}"/>
                    </TextBlock>

                    <!-- Success Message -->
                    <Border Background="#1A4CAF50" BorderBrush="#4CAF50" BorderThickness="1" CornerRadius="6" Padding="12" Margin="0,0,0,16"
                            Visibility="{Binding SuccessMessage, Converter={StaticResource EmptyStringToVisibilityConverter}}">
                        <TextBlock Text="{Binding SuccessMessage}" Foreground="#4CAF50" TextWrapping="Wrap" TextAlignment="Center"/>
                    </Border>

                    <!-- Error Message -->
                    <Border Background="#1AFF5252" BorderBrush="{StaticResource DeleteBrush}" BorderThickness="1" CornerRadius="6" Padding="12" Margin="0,0,0,16"
                            Visibility="{Binding ErrorMessage, Converter={StaticResource EmptyStringToVisibilityConverter}}">
                        <TextBlock Text="{Binding ErrorMessage}" Foreground="{StaticResource DeleteBrush}" TextWrapping="Wrap" TextAlignment="Center"/>
                    </Border>

                    <!-- Verification Code Input -->
                    <Grid>
                        <TextBox Text="{Binding VerificationCode, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource InputTextBoxStyle}"
                                 FontSize="20"
                                 TextAlignment="Center"
                                 MaxLength="10"/>
                        <TextBlock Text="Enter verification code" IsHitTestVisible="False" Margin="0,18" Foreground="{StaticResource TextSecondaryBrush}" FontSize="16" HorizontalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding VerificationCode}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding VerificationCode}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>

                    <!-- Verify Button -->
                    <Button Content="Verify Email" Style="{StaticResource PrimaryButtonStyle}" Command="{Binding VerifyEmailCommand}" Padding="0,14" Margin="0,8,0,0"/>

                    <!-- Loading Indicator -->
                    <TextBlock Text="Verifying..." Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center" Margin="0,12,0,0"
                               Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                    <!-- Resend Code -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,24,0,0">
                        <TextBlock Text="Didn't receive the code? " Foreground="{StaticResource TextSecondaryBrush}"/>
                        <Button Style="{StaticResource LinkButtonStyle}" Content="Resend" Command="{Binding ResendCodeCommand}"/>
                    </StackPanel>
                </StackPanel>

                <!-- ============ SOCIAL LOGIN (shown on Login/Register views) ============ -->
                <StackPanel Margin="0,30,0,0">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsLoginView}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsRegisterView}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    
                    <Grid>
                        <Separator Background="{StaticResource BorderBrush}" VerticalAlignment="Center"/>
                        <TextBlock Text="or continue with" Background="{StaticResource BackgroundBrush}" Padding="15,0" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                    </Grid>

                    <!-- Google Login Button -->
                    <Button Command="{Binding GoogleLoginCommand}" 
                            HorizontalAlignment="Center" Margin="0,20,0,0"
                            Padding="20,12" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="6"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource SurfaceHoverBrush}"/>
                                                </Trigger>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter Property="Opacity" Value="0.5"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="G" FontWeight="Bold" FontSize="18" Foreground="#4285F4" Margin="0,0,12,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Continue with Google" FontSize="14" Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Waiting for OAuth indicator -->
                    <TextBlock Text="Waiting for browser login..." 
                               Foreground="{StaticResource TextSecondaryBrush}" 
                               HorizontalAlignment="Center" 
                               Margin="0,12,0,0"
                               Visibility="{Binding IsWaitingForOAuth, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>
