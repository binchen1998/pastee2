<Window x:Class="Pastee.App.Views.ImageViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Image Viewer" 
        Width="800" Height="600"
        MinWidth="400" MinHeight="300"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip">
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" 
                      ResizeBorderThickness="8" 
                      GlassFrameThickness="0" 
                      CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Border Background="{StaticResource BackgroundBrush}" CornerRadius="12" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.5" Color="Black"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="16,12,16,8">
                <TextBlock x:Name="TitleText" 
                           Text="Image Viewer" 
                           Foreground="{StaticResource TextPrimaryBrush}" 
                           FontSize="14" 
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <!-- Save Button -->
                    <Button Style="{StaticResource IconButtonStyle}"
                            Content="ðŸ’¾" 
                            FontSize="14"
                            Width="28" Height="28"
                            Click="SaveButton_Click"
                            ToolTip="Save Image"/>
                    <!-- Copy Button -->
                    <Button Style="{StaticResource IconButtonStyle}"
                            Content="ðŸ“‹" 
                            FontSize="14"
                            Width="28" Height="28"
                            Click="CopyButton_Click"
                            ToolTip="Copy to Clipboard"/>
                    <!-- Maximize/Restore Button -->
                    <Button x:Name="MaximizeButton"
                            Style="{StaticResource IconButtonStyle}"
                            Content="ðŸ—–" 
                            FontSize="12"
                            Width="28" Height="28"
                            Click="MaximizeButton_Click"
                            ToolTip="Maximize"/>
                    <!-- Close Button -->
                    <Button Style="{StaticResource IconButtonStyle}"
                            Content="âœ•" 
                            FontSize="14"
                            Width="28" Height="28"
                            Click="CloseButton_Click"
                            ToolTip="Close (Esc)"/>
                </StackPanel>
            </Grid>

            <!-- Image Container -->
            <Border Grid.Row="1" Background="{StaticResource SurfaceBrush}" Margin="12,0,12,12" CornerRadius="8" Padding="8">
                <Image x:Name="ImageViewer" 
                       Stretch="Uniform"
                       StretchDirection="DownOnly"
                       RenderOptions.BitmapScalingMode="HighQuality"/>
            </Border>

            <!-- Image Info -->
            <TextBlock x:Name="ImageInfoText" 
                       Grid.Row="1" 
                       HorizontalAlignment="Right" 
                       VerticalAlignment="Bottom" 
                       Margin="0,0,20,20"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       FontSize="11"
                       Background="#AA1E1E2E"
                       Padding="8,4"/>
        </Grid>
    </Border>
</Window>

