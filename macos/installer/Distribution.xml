<?xml version="1.0" encoding="utf-8"?>
<installer-gui-script minSpecVersion="2">
    <title>Pastee</title>
    <organization>im.pastee</organization>
    <domains enable_localSystem="true"/>
    <options customize="never" require-scripts="true" rootVolumeOnly="true" hostArchitectures="x86_64,arm64"/>
    
    <!-- 背景图片（可选，如需要可取消注释）
    <background file="background.png" mime-type="image/png" alignment="bottomleft" scaling="none"/>
    <background-darkAqua file="background-dark.png" mime-type="image/png" alignment="bottomleft" scaling="none"/>
    -->
    
    <!-- 欢迎、许可、结论页面（可选）
    <welcome file="welcome.html" mime-type="text/html"/>
    <license file="license.html" mime-type="text/html"/>
    <conclusion file="conclusion.html" mime-type="text/html"/>
    -->
    
    <choices-outline>
        <line choice="default">
            <line choice="im.pastee.app"/>
        </line>
    </choices-outline>
    
    <choice id="default"/>
    
    <choice id="im.pastee.app" visible="false">
        <pkg-ref id="im.pastee.app"/>
    </choice>
    
    <pkg-ref id="im.pastee.app" version="0" onConclusion="none">Pastee.pkg</pkg-ref>
</installer-gui-script>

